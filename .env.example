# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google Maps Configuration
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Weather API Configuration (OpenWeatherMap)
NEXT_PUBLIC_OPENWEATHERMAP_API_KEY=your_openweathermap_api_key

# Analytics Configuration (Plausible)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# Feature Flags (set to 'true' to enable)
NEXT_PUBLIC_FEATURE_RESOURCE_LIBRARY=false
NEXT_PUBLIC_FEATURE_REFERRAL_TRACKER=false
NEXT_PUBLIC_FEATURE_PARENT_PORTAL=false
NEXT_PUBLIC_FEATURE_ONLINE_PAYMENTS=false
NEXT_PUBLIC_FEATURE_CHAT_SUPPORT=false

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Vercel Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Business Information
NEXT_PUBLIC_BUSINESS_NAME=Great Beginnings Day Care Center
NEXT_PUBLIC_BUSINESS_PHONE=(630) 894-3440
NEXT_PUBLIC_BUSINESS_ADDRESS=757 E Nerge Rd, Roselle, IL 60172
NEXT_PUBLIC_BUSINESS_EMAIL=info@greatbeginningsdaycare.com
NEXT_PUBLIC_BUSINESS_HOURS_WEEKDAY=6:30 AM - 6:00 PM
NEXT_PUBLIC_BUSINESS_HOURS_WEEKEND=Closed